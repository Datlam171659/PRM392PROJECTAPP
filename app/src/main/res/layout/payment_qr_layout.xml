<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F9F9F9"
    tools:ignore="ExtraText">

    <!-- Hướng dẫn quét mã QR -->
    <TextView
        android:id="@+id/qrInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quét mã QR dưới đây trên app ngân hàng của bạn để chuyển tiền:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <!-- Hình ảnh mã QR -->
    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:src="@drawable/qr_code"/>

    <!-- Thông tin ngân hàng -->
    <TextView
        android:id="@+id/bankInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngân hàng: VCB\nSố tài khoản: 11665751\nChủ tài khoản: NGUYEN XUAN VIET"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>

    <!-- Số tiền và nội dung chuyển tiền -->
    <TextView
        android:id="@+id/paymentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền: \nNội dung chuyển tiền: nâng cấp tài khoản"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <!-- Thời gian đếm ngược -->
    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã thanh toán hết hạn sau: 30 phút"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF8800"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>

</LinearLayout>
