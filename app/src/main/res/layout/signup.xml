<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:space="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F9F9F9"
    tools:ignore="ExtraText"
    android:id="@+id/signup">

    <!-- App logo or icon -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo_foreground" />

    <!-- Greeting message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Subtext -->
    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_intro"
        android:textSize="14sp"
        android:textColor="#8C8C8C"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đăng nhập"
        android:inputType="text"
        android:textColorHint="#FF8800"
        android:backgroundTint="#FF8800"
        android:layout_marginTop="24dp"/>

    <!-- Email/Phone EditText -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:inputType="text"
        android:textColorHint="#FF8800"
        android:backgroundTint="#FF8800"
        android:layout_marginTop="24dp"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#FF8800"
        android:backgroundTint="#FF8800"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColorHint="#FF8800"
        android:backgroundTint="#FF8800"
        android:layout_marginTop="16dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF8800"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

    <!-- Bottom Links: Change Register Method / Forgot Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/changeRegisterMethodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi phương thức đăng ký"
            android:textColor="#8C8C8C"
            android:textSize="14sp"
            android:paddingRight="120dp"/>

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textColor="#8C8C8C"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
