<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header Section with Avatar, Notification, and Search bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_avatar" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@id/imgAvatar"
            android:src="@drawable/ic_notification" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/imgNotification"
            android:background="@drawable/search_background"
            android:hint="Search food..."
            android:paddingLeft="16dp"
            android:drawableStart="@drawable/ic_search" />

    </RelativeLayout>

    <!-- Popular Dishes Section -->
    <TextView
        android:id="@+id/tvPopularDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phổ biến"
        android:textStyle="bold"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopularDishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" />

    <!-- Suggested Dishes Section -->
    <TextView
        android:id="@+id/tvSuggestedDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gợi ý từ đầu bếp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSuggestedDishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Bottom Navigation Menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
